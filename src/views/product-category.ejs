<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <!-- BOOTSTRAP -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <!-- ESTILOS -->

    <link rel="stylesheet" href="/css/category.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/img/logo-general.png">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">




</head>
<body>


<%- include ("./partials/navbar") %>

<div class="row" style="display: flex; align-items: center; justify-content: center; width: 100%;">
    <% for (const products of result) { %>
    <div class="col-3">
        <a href="product/detail/<%=products.id%>">
            <div class="card-category">
            <img class="img-category" src="<%=products.image%>" alt="">
            <div class="title-category" style="text-decoration: none;">
                <%=products.title%>
            </div>
            <div class="price-category ">
                $<%=products.price%>
            </div>
            </div>
        </a>
    </div>
    <% } %>
</div>

<%- include ("./partials/footer") %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

</body>
</html>