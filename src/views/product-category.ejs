<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- ESTILOS -->
    <link rel="stylesheet" href="/css/category.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/img/logo-general.png">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">



    <!-- BOOTSTRAP Y SLIDER -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/swiffy-slider@1.6.0/dist/css/swiffy-slider.min.css" rel="stylesheet" crossorigin="anonymous">
</head>
<body>


<%- include ("./partials/navbar") %>

<div class="row" style="display: flex; align-items: center; justify-content: center; width: 100%;">
    <% for (const products of result) { %>
    <div class="col-3">
        <a href="product/detail/<%=products.id%>">
            <div class="card-category">
            <img class="img-category" src="<%=products.image%>" alt="">
            <div class="title-category" style="text-decoration: none;">
                <%=products.title%>
            </div>
            <div class="price-category ">
                $<%=products.price%>
            </div>
            </div>
        </a>
    </div>
    <% } %>
</div>

<%- include ("./partials/footer") %>



</body>
</html>